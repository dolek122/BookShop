@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";
}
<h2>Magazyn</h2>

<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form-control w-25" placeholder="Szukaj po książce" />
    <button type="submit" class="btn btn-primary">Znajdź</button>
    <a asp-action="Index" asp-controller="Stock" class="btn btn-primary">Wyczyść</a>
</form>

<table class="table table-bordered">
  <tr>
    <th>Książka</th>
    <th>Zapas</th>
    <th>Akcja</th>
  </tr>
  @foreach(var item in Model)
  {
    <tr>
      <td>@item.BookName</td>
      <td>@item.Quantity</td>
      <td>
         <a asp-action="ManangeStock" asp-controller="Stock" asp-route-bookId="@item.BookId" class="btn btn-info"> Aktualizuj</a>
      </td>
    </tr>
  }
</table>

